<%- include ( './partials/head' ); %>
  <link rel="stylesheet" href="/css/formularios.css">
  </head>

  <body class="">
    <%- include ( './partials/header' ); %>
      <%- include ( './partials/contacto' ); %>

        <section class="container estiloDeCaja">
          <% if (locals.userLogged) { %>
            <% if (locals.userLogged.rol=="admin" ) { %>
              <form action="/altaVoucher" method="post" id="formularioAltaVoucher" class="">
                <h2 class="">Carga un nuevo voucher de descuento</h2>
                <div class="row justify-content-between ">

                  <label for="voucher" class="col-7">Ingresar el nuevo voucher</label>
                  <p class="col-7">Recorda que NO debe contener espacios</p>
                </div>
                <div class="row">
                  <div class="form-group  col-4">
                    <label for="">Voucher</label>
                    <input type="text" value="<%= locals.old &&  old.voucher ? old.voucher : "" %>" placeholder="Ej: finDeAño2022ClipShop" name="voucher" class="form-control">
                    <p><%= locals.errores && errores.voucher ? errores.voucher.msg : "" %></p>
                  </div>
                  <div class="form-group col-4">
                    <label for="">Monto en Porcentaje</label>
                    <div class="input-group  ">
                      <input type="number" value="<%= locals.old &&  old.valor ? old.valor : "" %>" placeholder="Ej: 20" name="valor" class="form-control">
                      <div class="input-group-prepend">
                        <div class="input-group-text">%</div>
                      </div>
                      <p><%= locals.errores && errores.valor ? errores.valor.msg : "" %></p>
                    </div>
                  </div>
                  

                </div>



                <button class="btn botones col-lg-4 col-md-6 ml-auto" type="submit">CREAR<i class="fas fa-pencil-alt iconos"></i></button>

              </form>

              <%}else{%>
                <h3 class="text-center my-5">Usted no posee credenciales validas para acceder a esta sección.</h3>

                <%}}%>
        </section>

        <%- include ( './partials/footer' ); %>