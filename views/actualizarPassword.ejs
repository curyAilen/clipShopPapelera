<%- include ( './partials/head' ); %>
    <!--<link rel="stylesheet" href="/css/login.css">-->
    </head>

    <body class="">
        <%- include ( './partials/header' ); %>
            <%- include ( './partials/contacto' ); %>

                <section class="container ">
                    <form action="/user/cuenta/actualizarPassword/<%= usuario.idUsuarios %>" enctype="application/x-www-form-urlencoded" method="post" class="estiloDeCaja" id="formularioActualizaClave">
                        <div class="form-group ">
                            <label for="emailRegister">E-mail</label>
                            <input type="email" disabled name="email" id="email" placeholder="E-mail" value="<%= usuario.email %>" class="form-control" />
                        </div>

                        <div class="form-group claveBox">
                            <label for="clave">Repetir Contraseña</label>
                            <input type="password" name="password" id="clave" placeholder="Contraseña" value="" class="form-control" />
                            <p><%= locals.errores && errores.password ? errores.password.msg : "" %></p>
                            <input type="password" name="confirmpassword" id="re-clave" placeholder="Confirmar contraseña" value="" class="form-control mt-3" />
                            <p><%= locals.errores && errores.confirmpassword ? errores.confirmpassword.msg : "" %></p>
                        </div>
                        <button type="submit" class="btn botones btnEditarGuardar">Guardar cambios</button>
                    </form>
                </section>


                <%- include ( './partials/footer' ); %>
    </body>