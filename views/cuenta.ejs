<%- include ( './partials/head' ); %>


    <link rel="stylesheet" href="/css/cuenta.css">

    </head>

    <body class="">

        <%- include ( './partials/header' ); %>
            <%- include ( './partials/contacto' ); %>

                <section id="miCuenta" class="container ">
                    <article class="row justify-content-between mx-auto">
                        <div id="misDatos" class="col-lg-3 col-md-12">
                            <h3 class="botones ">Mis Datos</h3>
                        </div>

                        <div id="misCompras" class="col-lg-3 col-md-12">
                            <h3 class="botones ">Mis Compras</h3>
                        </div>

                        <% if (locals.userLogged) { %>
                            <% if (locals.userLogged.rol=="admin" ) { %>

                                <div id="accionesAdmin" class="col-lg-3 col-md-12">
                                    <h3 class="botones ">Administración</h3>
                                </div>
                                <%}%>
                                    <%}%>
                    </article>
                </section>
                <section id="comprasHistorial" class="container-fluid ocultar ">
                    <article class="row ">
                        <h1 class="mt-5">Historial de compra</h1>

                        <% ventasH.forEach(venta=> { %>
                            <%if (venta.idUsuarios==locals.userLogged.idUsuarios) {%>
                                <div class=" pedido col-lg-5 col-md-10 ">
                                    <div class="row">
                                        <p class="col-5"><span class="enfasis h5 mr-2">N° Usuario: </span>

                                            <%=venta.idUsuarios%>
                                        </p>
                                        <p class="col-5"> <span class="enfasis h5 mr-2"> N° Pedido:</span>
                                            <%=venta.pedidoNum%>

                                        </p>
                                        <p class="col-5"><span class="enfasis mr-2">Fecha de la compra:</span>
                                            <%=venta.fecha%>
                                        </p>
                                        <hr style=" text-align: center;" class="col-9">
                                        <div class="col-10">
                                            <p> <span class="enfasis">Productos:</span></p>
                                            <ul>

                                             
                                                  
                                                        <% venta.productos.forEach(producto=> { %>
                                                            <li>
                                                                <%= producto.cantidad %>
                                                                    <%= producto.nombre %>
                                                                        <span class="enfasis">Importe </span>$<%=
                                                                            producto.importe %>.-
                                                            </li>
                                                            <!-- <li>Cantidad: </li>
                                                                <li></li>-->
                                                            <% }); %>

                                                   
                                            


                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <% })%>

                    </article>

                    <article class="row ">
                        <% if (locals.userLogged.rol=="admin" ) { %>
                            <h1 class="mt-5">Pedidos historicos</h1>

                            <% ventasH.forEach(venta=> { %>
                                <div class=" pedido col-lg-5 col-md-10 ">
                                    <div class="row">
                                        <p class="col-5"><span class="enfasis h5 mr-2">N° Usuario: </span>

                                            <%=venta.idUsuarios%>
                                        </p>
                                        <p class="col-5"> <span class="enfasis h5 mr-2"> N° Pedido:</span>
                                            <%=venta.pedidoNum%>

                                        </p>
                                        <p class="col-5"><span class="enfasis mr-2">Fecha de la compra:</span>
                                            <%=venta.fecha%>
                                        </p>
                                        <hr style=" text-align: center;" class="col-9">
                                        <div class="col-10">
                                            <p> <span class="enfasis">Productos:</span></p>
                                            <ul>

                                    
                                                  
                                                        <% venta.productos.forEach(producto=> { %>
                                                            <li>
                                                                <%= producto.cantidad %>
                                                                    <%= producto.nombre %>
                                                                        <span class="enfasis">Importe </span>$<%=
                                                                            producto.importe %>.-
                                                            </li>
                                                            <% }); %>
                                                  
                                       


                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <%}%>


                    </article>


                </section>


                <section id="datosUsuarios" class="container mostrar estiloDeCaja">

                    <div class="row cajaDatosUsuario">
                        <% if (locals.userLogged) { %>
                            <h1>Bienvenid@
                                <%= locals.userLogged.nombre %>.
                            </h1>
                            <div id="data">
                                <p> Nombre:
                                    <%= locals.userLogged.nombre %>
                                </p>
                                <p> E-mail:
                                    <%= locals.userLogged.email %>
                                </p>
                                <p> Dirección:
                                    <%= locals.userLogged.direccion %>
                                </p>


                            </div>
                            <a href="/user/cuenta/editarPerfil/<%=locals.userLogged.idUsuarios%>"
                                class="botones btn btnCuenta col-md-3 col-sm-5">Modificar datos</a>
                            <a href="/user/cuenta/actualizarPassword/<%=locals.userLogged.idUsuarios%>"
                                class="botones btn btnCuenta col-md-3 col-sm-5">Modificar contraseña</a>
                            <% if (locals.userLogged.rol=="admin" ) { %>
                                <a href="/user/listadoClientes" class="botones btn btnCuenta col-md-3 col-sm-5"
                                    aria-disabled="false">Listar clientes</a>
                                <%}%>

                                    <a href="/user/logout"
                                        class="nav-link btn btnCuenta text-end col-md-3 col-sm-5">Cerrar sesión<i
                                            class="mx-2 fas fa-sign-out-alt iconosUser "></i></a>


                                    <% } else {%>
                                        <h1>Tenes que estar logueado.</h1>

                                        <%}%>




                    </div>
                </section>

                <section id="adminProductos" class="container ocultar estiloDeCaja">
                    <div class="row justify-content-center">
                        <a href="/tienda/altaProducto" class="botones col-lg-4 col-md-10 mx-3 btnAdminProd btn ">
                            Ingresar un
                            producto <i class="fas fa-plus iconos"></i></a>

                        <a href="/configBanner" class="botones col-lg-4 col-md-10 mx-3 btnAdminProd btn ">Banner<i
                                class="fas fa-cogs iconos"></i></a>
                        <a href="/configVoucher" class="botones col-lg-4 col-md-10 mx-3 btnAdminProd btn ">Voucher<i
                                class="fas fa-cogs iconos"></i></a>
                        <a href="/enviarEmail" class="botones col-lg-4 col-md-10 mx-3 btnAdminProd btn ">Email<i
                                class="fas fa-envelope iconos"></i></a>
                    </div>
                </section>



                <%- include ( './partials/footer' ); %>