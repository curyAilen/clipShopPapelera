<%- include ( './partials/head' ); %>
    <link rel="stylesheet" href="css/detalleProducto.ejs">

    </head>

    <body class="">
        <%- include ( './partials/header' ); %>
            <%- include ( './partials/contacto' ); %>
                <!--TIENDA-->
                <section class="">
                                     
                    <article class="container">
                        <div class="" id="search">
                            <form id="search-form" action="/search" method="POST" enctype="multipart/form-data" class="row">
                                <div class="form-group col-4">
                                    <input class="form-control" type="text" placeholder="Search" />
                                     
                                </div>
                                <div class="form-group col-4">
                                    <button type="submit" class="btn btn-block btn-primary">Buscar</button>
                                </div>
                            </form>
                        </div>
                        <div class="" id="filter">
                            <form action="/tienda" method="POST" enctype="multipart/form-data" class="row">
                                <div class="form-group col-4">
                                    <select class="form-control" id="categoria" name="categoria">
                                        <% for(let i=0; i< categoria.length; i++) { %>
                                          <option value= "<%= categoria[i].idCategorias %>" ><%= categoria[i].nombreCategoria %> </option>
                                      <% } %>
                                      </select>
                                </div>
                                <div class="form-group col-4">
                                    <input type="number" value="100" name="min">
                                    <input type="number" value="10000" name="max">
                                    
                                    <input type="range" id="slider" min="0" max="100" >
                                   
                                </div>
                                <div class="form-group col-4">
                                    <select data-filter="type" class="filter-type filter form-control">
                                        <option value="">Select Type</option>
                                        <option value="">Show All</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-4">
                                    <select data-filter="price" class="filter-price filter form-control">
                                        <option value="">Select Price Range</option>
                                        <option value="">Show All</option>
                                    </select>
                                </div>
                                <div class="form-group col-4">
                                    <button type="submit" class="btn btn-block btn-primary">Buscar</button>
                                </div>
                            </form>
                        </div>
                        <div class="row" id="products">
                            
                        </div>
                    </article>

                    <article class="container">

                        <div class="row justify-content-around">

                            <%for(let i=0; i<producto.length; i++){%>
                                <div class="contieneProductos col-lg-3 col-md-6">
                                    <a href="/tienda/detalle/<%=producto[i].idProductos%>"
                                        class="linkADetalle animacionProd eliminasEstiloLink">
                                        <img src="/images/imgProd/<%=producto[i].imagen%>" alt=""
                                            class="imgProducto img-fluid">
                                        <div class="detalleProductoTienda">
                                            <h4 class="nombreProductoTienda titulos">
                                                <%=producto[i].nombre%>
                                            </h4>
                                            <p class="precioProductoTienda">
                                                <%=producto[i].precio%>.-
                                            </p>
                                            <p class="descripcionProductoTienda ">
                                                <%=producto[i].descripcion%>
                                            </p>
                                            <p class="categoriaTienda">
                                                <%= producto[i].categoria.nombreCategoria %>
                                            </p>
                                        </div>
                                    </a>

                                    <button class="btn botones m-3 float-right ">
                                        <a href="#" class="eliminasEstiloLink"
                                            style="color: rgb(255, 245, 238);">Agregar</a></button>
                                    <button class="btn botones m-3 float-right ">
                                        <a href="/carrito" class="eliminasEstiloLink"
                                            style="color: rgb(255, 245, 238);">Comprar</a></button>
                                </div>
                                <%}%>
                        </div>
                    </article>
                </section>




                <%- include ( './partials/footer' ); %>