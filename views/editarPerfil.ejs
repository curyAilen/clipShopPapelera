<%- include ( './partials/head' ); %>
  <link rel="stylesheet" href="/css/login.css">
  </head>

  <body class="">
    <%- include ( './partials/header' ); %>
      <%- include ( './partials/contacto' ); %>

        <section class="container ">
          <form action="/user/cuenta/editarPerfil/<%= usuario.idUsuarios %>" enctype="application/x-www-form-urlencoded"
            method="post" class="formularioEditPerfil">
            <div class="form-group ">
              <label for="emailRegister">E-mail</label>
              <input type="email" name="email" id="email" placeholder="E-mail" value="<%= usuario.email %>"  class="form-control"/>
              <p class="errorEmail erroresRegister"></p>
            </div>
            <div class="form-group ">
              <label for="nombre">Nombre</label>
              <input type="text" name="nombre" required value="<%= usuario.nombre %>" class="form-control"/>
            </div>
            <div class="form-group ">
              <label for="direccion">Dirección de entrega</label>
              <input type="text" name="direccion" required value="<%= usuario.direccion %>" class="form-control"/>
            </div>
            <div class="form-group ">
              <label for="direccionRegister">teléfono (opcional)</label>
              <input type="number" name="telefono" value="<%= usuario.telefono %>" class="form-control"/>
            </div>
            <div class="form-group d-flex   claveBox">
              <label for="clave">Contraseña</label>
              <input type="password" name="password" id="clave" placeholder="Contraseña"  class="form-control mx-2" value="" required/>
            </div>
          
            <button type="submit" class="btn botones btnEditarGuardar">Guardar cambios</button>
          </form>
        </section>


        <%- include ( './partials/footer' ); %>